---
import Container from '@components/common/Container.astro';
import Button from '@components/common/Button.astro';
import { getLocaleData } from '@lib/i18n';
import type { Locale } from '@lib/i18n';

export interface Props {
  locale: Locale;
}

const { locale } = Astro.props;
const t = getLocaleData(locale);
---

<section class="section relative overflow-hidden">
  <div class="absolute inset-0 bg-gradient-to-br from-primary via-secondary to-accent"></div>
  <div class="absolute inset-0 opacity-10">
    <div class="absolute inset-0" style="background-image: url('data:image/svg+xml,%3Csvg width="40" height="40" viewBox="0 0 40 40" xmlns="http://www.w3.org/2000/svg"%3E%3Cg fill="none" fill-rule="evenodd"%3E%3Cg fill="%23ffffff" fill-opacity="0.5"%3E%3Cpath d="M0 40L40 0H20L0 20M40 40V20L20 40"/%3E%3C/g%3E%3C/g%3E%3C/svg%3E'); background-size: 40px 40px;"></div>
  </div>
  <Container size="md">
    <div class="relative z-10 text-center text-white">
      <h2 class="font-display font-bold mb-6">
        {t.cta.title}
      </h2>
      <p class="text-xl md:text-2xl mb-10 opacity-95 max-w-2xl mx-auto">
        {t.cta.subtitle}
      </p>
      <div class="transform hover:scale-105 transition-transform duration-300 inline-block">
        <Button 
          href={t.hero.cta_link || '#contact'}
          size="lg"
          variant="white"
          external={t.hero.cta_link?.startsWith('http')}
          class="shadow-2xl"
        >
          <span class="px-4">{t.cta.button}</span>
        </Button>
      </div>
    </div>
  </Container>
</section>