---
export interface Props {
  title?: string;
  description?: string;
  icon?: string;
  class?: string;
  hover?: boolean;
}

const { 
  title, 
  description, 
  icon, 
  class: className,
  hover = true 
} = Astro.props;
---

<div class:list={[
  'card bg-white rounded-2xl p-6 shadow-sm',
  hover && 'hover:shadow-md transition-shadow duration-200',
  className
]}>
  {icon && (
    <div class="w-12 h-12 mb-4 rounded-lg bg-gradient-primary flex items-center justify-center text-white">
      <span class="text-2xl">{icon}</span>
    </div>
  )}
  
  {title && (
    <h3 class="text-xl font-display font-semibold mb-2">{title}</h3>
  )}
  
  {description && (
    <p class="text-gray-600">{description}</p>
  )}
  
  <slot />
</div>