---
export interface Props {
  variant?: 'primary' | 'secondary' | 'ghost' | 'white';
  size?: 'sm' | 'md' | 'lg' | 'large';
  href?: string;
  external?: boolean;
  class?: string;
  [key: string]: any;
}

const {
  variant = 'primary',
  size = 'md',
  href,
  external = false,
  class: className,
  ...rest
} = Astro.props;

const Element = href ? 'a' : 'button';
const linkProps = href ? {
  href,
  ...(external && { target: '_blank', rel: 'noopener noreferrer' })
} : {};
---

<Element
  class:list={[
    'btn',
    `btn-${variant}`,
    `btn-${size}`,
    className
  ]}
  {...linkProps}
  {...rest}
>
  <slot />
</Element>