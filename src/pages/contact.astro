---
import BaseLayout from '@layouts/BaseLayout.astro';
import Container from '@components/common/Container.astro';
import Button from '@components/common/Button.astro';

const title = 'Contact - Vecia';
const description = 'Contactez Vecia pour discuter de vos besoins en automatisation IA';
---

<BaseLayout title={title} description={description}>
  <!-- Hero Section -->
  <section class="section bg-gradient-to-b from-white to-gray-50">
    <Container>
      <div class="text-center mb-16 scroll-fade">
        <h1 class="font-display font-bold text-dark mb-4">
          <span class="text-4xl text-vecia-blue">■</span> Contactez-nous
        </h1>
        <p class="text-xl text-gray-700 max-w-3xl mx-auto">
          Découvrez comment Vecia peut transformer vos opérations avec l'IA
        </p>
        <div class="mt-24 mb-16">
          <Button href="https://calendly.com/vecia/decouverte" variant="primary" size="lg">
            <span class="px-4">Planifier une consultation gratuite</span>
          </Button>
        </div>
      </div>
    </Container>
  </section>

  <!-- Contact Form Section -->
  <section class="section bg-white">
    <Container>
      <div class="max-w-2xl mx-auto">
        <div class="text-center mb-12 scroll-fade">
          <h2 class="font-display font-bold text-dark mb-4">
            Envoyez-nous un message
          </h2>
          <p class="text-lg text-gray-700">
            Notre équipe vous répondra dans les plus brefs délais
          </p>
        </div>
        
        <div class="bg-gray-50 rounded-3xl p-8 md:p-12 scroll-fade">
          <form class="space-y-6" action="#" method="POST">
            <div class="grid md:grid-cols-2 gap-6">
              <div>
                <label for="name" class="block text-sm font-medium text-gray-700 mb-2">
                  Nom complet
                </label>
                <input
                  type="text"
                  id="name"
                  name="name"
                  required
                  class="w-full px-5 py-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-primary focus:border-transparent transition-all"
                />
              </div>

              <div>
                <label for="email" class="block text-sm font-medium text-gray-700 mb-2">
                  Email professionnel
                </label>
                <input
                  type="email"
                  id="email"
                  name="email"
                  required
                  class="w-full px-5 py-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-primary focus:border-transparent transition-all"
                />
              </div>
            </div>

            <div>
              <label for="company" class="block text-sm font-medium text-gray-700 mb-2">
                Entreprise
              </label>
              <input
                type="text"
                id="company"
                name="company"
                class="w-full px-5 py-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-primary focus:border-transparent transition-all"
              />
            </div>

            <div>
              <label for="message" class="block text-sm font-medium text-gray-700 mb-2">
                Message
              </label>
              <textarea
                id="message"
                name="message"
                rows="5"
                required
                class="w-full px-5 py-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-primary focus:border-transparent transition-all resize-none"
              ></textarea>
            </div>

            <div class="text-center">
              <Button type="submit" size="lg">
                Envoyer le message
              </Button>
            </div>
          </form>

          <p class="text-sm text-gray-500 mt-6 text-center">
            En soumettant ce formulaire, vous acceptez notre 
            <a href="/privacy" class="text-primary hover:underline">politique de confidentialité</a>.
          </p>
        </div>
      </div>
    </Container>
  </section>
</BaseLayout>