---
import BaseLayout from '@layouts/BaseLayout.astro';
import Container from '@components/common/Container.astro';
import Button from '@components/common/Button.astro';

const title = 'Contact';
const description = 'Contactez Vecia pour discuter de vos besoins en automatisation IA';
---

<BaseLayout title={title} description={description}>
  <section class="pt-32 pb-16 md:pt-40 md:pb-24">
    <Container>
      <div class="max-w-4xl mx-auto">
        <div class="text-center mb-12">
          <h1 class="text-4xl md:text-5xl font-display font-bold tracking-tight mb-4">
            Parlons de votre projet
          </h1>
          <p class="text-lg md:text-xl text-gray-600">
            D√©couvrez comment Vecia peut transformer vos op√©rations avec l'IA
          </p>
        </div>

        <div class="grid md:grid-cols-2 gap-12">
          <!-- Contact Information -->
          <div>
            <h2 class="text-2xl font-display font-semibold mb-6">Contactez-nous</h2>
            
            <div class="space-y-6">
              <div>
                <h3 class="font-semibold mb-2">üìç Adresse</h3>
                <p class="text-gray-600">
                  [Votre adresse]<br />
                  Paris, France
                </p>
              </div>

              <div>
                <h3 class="font-semibold mb-2">üìß Email</h3>
                <p class="text-gray-600">
                  <a href="mailto:contact@vecia.ai" class="text-primary hover:underline">
                    contact@vecia.ai
                  </a>
                </p>
              </div>

              <div>
                <h3 class="font-semibold mb-2">üìÖ R√©server un appel</h3>
                <p class="text-gray-600 mb-4">
                  Planifiez un appel d√©couverte de 30 minutes pour discuter de vos besoins
                </p>
                <Button 
                  href="https://calendly.com/vecia/decouverte"
                  external={true}
                  variant="primary"
                >
                  R√©server un cr√©neau
                </Button>
              </div>

              <div>
                <h3 class="font-semibold mb-2">üïê Horaires</h3>
                <p class="text-gray-600">
                  Lundi - Vendredi : 9h00 - 18h00<br />
                  Samedi - Dimanche : Ferm√©
                </p>
              </div>
            </div>
          </div>

          <!-- Contact Form -->
          <div>
            <h2 class="text-2xl font-display font-semibold mb-6">Envoyez-nous un message</h2>
            
            <form class="space-y-6" action="#" method="POST">
              <div>
                <label for="name" class="block text-sm font-medium text-gray-700 mb-2">
                  Nom complet
                </label>
                <input
                  type="text"
                  id="name"
                  name="name"
                  required
                  class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-transparent"
                />
              </div>

              <div>
                <label for="email" class="block text-sm font-medium text-gray-700 mb-2">
                  Email professionnel
                </label>
                <input
                  type="email"
                  id="email"
                  name="email"
                  required
                  class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-transparent"
                />
              </div>

              <div>
                <label for="company" class="block text-sm font-medium text-gray-700 mb-2">
                  Entreprise
                </label>
                <input
                  type="text"
                  id="company"
                  name="company"
                  class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-transparent"
                />
              </div>

              <div>
                <label for="message" class="block text-sm font-medium text-gray-700 mb-2">
                  Message
                </label>
                <textarea
                  id="message"
                  name="message"
                  rows="4"
                  required
                  class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-transparent"
                ></textarea>
              </div>

              <div>
                <Button type="submit" class="w-full">
                  Envoyer le message
                </Button>
              </div>
            </form>

            <p class="text-sm text-gray-500 mt-4">
              En soumettant ce formulaire, vous acceptez notre 
              <a href="/privacy" class="text-primary hover:underline">politique de confidentialit√©</a>.
            </p>
          </div>
        </div>
      </div>
    </Container>
  </section>
</BaseLayout>